// Configuration, designed for eslint, to lint the entire project
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
  },
  "include": [
    "**/**/*",
    "**/*.ts",
    "**/*.test.ts",
    "**/*.js",
    "**/**/*.js",
    "**/**/*.ts",
    "**/**/*.d.ts",
    "**/**/tsconfig*.json",
    "*.js",
    ".*.js"
  ]
}
