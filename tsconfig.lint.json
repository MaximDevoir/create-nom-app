// Configuration designed for and used by ESLint. All source files from all
// workspaces must be included.
//
// You can run `yarn run tsc --project ./tsconfig.lint.json --showConfig` to get
// a list of files included by the configuration. These files will get passed
// off to the ESLint tool.
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  /**
   * A list of all source files that are included in the linting process.
   */
  "include": [
    "**/**/*",
    "*.js",
    ".*.js",
    "*.json",
    "**/__mocks__/**/*.ts",
    "**/*.ts",
    "**/*.test.ts",
    "**/*.js",
    "**/**/*.js",
    "**/**/*.json",
    "**/**/*.ts",
    "**/**/*.d.ts",
    "**/**/tsconfig*.json"
  ]
}
