{
  "name": "create-nom-app",
  "description": "Start building a Node app in seconds.",
  "version": "0.0.10",
  "bin": {
    "create-nom-app": "./bin/index.js"
  },
  "license": "MIT",
  "author": {
    "name": "Maxim Devoir",
    "email": "maximdevoir@gmail.com"
  },
  "files": [
    "bin"
  ],
  "bugs": {
    "url": "https://github.com/create-nom-app/create-nom-app/issues"
  },
  "homepage": "https://github.com/create-nom-app/create-nom-app",
  "repository": {
    "type": "git",
    "url": "https://github.com/create-nom-app/create-nom-app.git",
    "directory": "packages/create-nom-app"
  },
  "scripts": {
    "build-with-tsc": "npm run build:clean && tsc --project ./tsconfig.build.json --noEmit false",
    "build": "npm run build:clean && cross-env NODE_ENV=production npm run build:source",
    "build:source": "webpack --progress --colors --config webpack.config.babel.js",
    "build:clean": "rimraf ./lib && rimraf ./bin && rimraf ./coverage",
    "clean": "npm run build:clean && npm run coverage:clean",
    "docs": "echo 'no documentation generation yet'",
    "husky:precommit": "lint-staged",
    "lint": "tsc --noEmit && eslint --ext .js,.ts,.json .",
    "lint:fix": "npm run lint -- --fix",
    "start": "npm run start:once -- --watch",
    "start:once": "cross-env NODE_ENV=development npm run build:source --",
    "test": "jest --config ./jest.config.js --runInBand --detectOpenHandles",
    "test:deprecated": "cross-env NODE_ENV=test mocha --colors --require @babel/register tests/*.spec.js",
    "test:watch": "cross-env NODE_ENV=test mocha --colors --watch --require @babel/register tests/*.spec.js"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "node",
    "zero-configuration",
    "build-tools"
  ],
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "chalk": "^3.0.0",
    "commander": "^4.0.0",
    "cross-spawn": "^7.0.1",
    "envinfo": "^7.3.1",
    "fs-extra": "^8.0.1",
    "is-directory": "^0.3.1",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "semver": "^6.0.0",
    "validate-npm-package-name": "^3.0.0",
    "which": "^2.0.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "@types/cross-spawn": "^6.0.1",
    "@types/fs-extra": "^8.0.1",
    "@types/validate-npm-package-name": "^3.0.0",
    "@types/which": "^1.3.2",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-add-module-exports": "^1.0.2",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^5.0.3",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-import": "^2.17.2",
    "mocha": "^6.1.4",
    "rimraf": "^3.0.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2",
    "webpack-node-externals": "^1.7.2",
    "webpack-permissions-plugin": "^1.0.5"
  }
}
